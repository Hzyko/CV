body{
	background: linear-gradient(to top, #333, #333 50%, #eee 100%, #333 100%);
}

.flex-container {
	display: flex;
	flex-wrap: nowrap;
	background-color: none;
}

.flex-container > div {
	background-color: #1a1918;
	width: 1000px;
	margin: 5px;
	text-align: center;
	line-height: 75px;
	font-size: 30px;
}
.content-container {
    background-color:none;
    display: block;
    border:none;
    padding: 0;
    margin:0;
    height: 1024px;
}

a {	
	text-decoration: none;
	color: #fff;
}

a:link {
  color: #fff;
}

a:hover {
	color: rgb(151,151,151);
}

h1 {
	Font-size: 40px;
	color: white;
}

img {
	width: 300px;
	height: 350px;
}
.imgWord {
	width: 150px;
	height: 150px;
	margin: 50px 50px;
	float: left;
	padding: 10px;
	border: solid #CCC;
}


.imgExcel {
	width: 150px;
	height: 150px;
	margin: 0 50px 50px;
	float: left;
	clear: left;
	padding: 10px;
	border: solid #CCC;
}
.txtWord p{
	transition: .5s;
}
.txtExcel p{
	transition: .5s;
}

.txtWord p:hover {
	color: blue;
}

.txtExcel p:hover {
	color: green;
}

.txt1 p{
	padding-top: 160px;
	color:#FFFFFF
}

.imgPP {
	width: 150px;
	height: 150px;
	margin: 0 50px 50px;
	float: left;
	clear: left;
	padding: 10px;
	border: solid #CCC;
}
